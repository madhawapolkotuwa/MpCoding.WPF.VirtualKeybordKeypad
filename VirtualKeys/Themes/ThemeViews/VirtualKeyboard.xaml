                                        ShiftedContent="_"
                                        ShiftedUnicodeText="_"
                                        UnshiftedContent="-"
                                        UnshiftedText="-" />
                                </Grid>
                            </Grid>
                        </Viewbox>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>