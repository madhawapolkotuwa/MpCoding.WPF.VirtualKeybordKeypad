<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vkb="clr-namespace:VirtualKeys.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/VirtualKeys;component/Dictionaries/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="BasicKeyStyling" TargetType="{x:Type ContentControl}">
        <Setter Property="FontFamily" Value="Helvetica" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style
        x:Key="StandardKeyboardKeyStyle"
        BasedOn="{StaticResource BasicKeyStyling}"
        TargetType="{x:Type vkb:KeyBase}" />
    <Style
        x:Key="ShiftKeyboardKeyStyle"
        BasedOn="{StaticResource BasicKeyStyling}"
        TargetType="{x:Type vkb:ShiftKey}">
        <Setter Property="FontSize" Value="30" />
    </Style>
    <Style
        x:Key="CapsKeyboardKeyStyle"
        BasedOn="{StaticResource BasicKeyStyling}"
        TargetType="{x:Type vkb:CapsKey}">
        <Setter Property="FontSize" Value="30" />
    </Style>

    <!--  Style for generic keyboard key  -->
    <Style x:Key="KeyboardKeyStyle" TargetType="{x:Type vkb:KeyBase}">
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="False" />
        <Setter Property="Background" Value="{StaticResource f_c2}" />
        <Setter Property="Foreground" Value="{StaticResource f_c1}" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ClickMode" Value="Press" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FFAAAAAA" />
                    <GradientStop Offset="1" Color="#FF999999" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Margin="1"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        SnapsToDevicePixels="true">
                        <ContentPresenter
                            x:Name="contentPresenter"
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="Foreground" Value="{StaticResource f_c1}" />
                            <Setter Property="Background" Value="{StaticResource f_c2}" />
                            <Setter Property="BorderBrush" Value="{StaticResource f_c3}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource f_c6}" />
                        </Trigger>
                        <Trigger Property="IsMouseCaptured" Value="True">
                            <Setter Property="Background" Value="{StaticResource f_c4}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Style for caps lock  -->
    <Style x:Key="CapsLockKeyStyle" TargetType="{x:Type vkb:KeyBase}">
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="False" />
        <Setter Property="Background" Value="{StaticResource f_c2}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ClickMode" Value="Press" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FFAAAAAA" />
                    <GradientStop Offset="1" Color="#FF999999" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="Background"
                        Margin="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        SnapsToDevicePixels="true">
                        <ContentPresenter
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}" />

                        <VisualStateManager.VisualStateGroups>

                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="Background"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#ff47d162"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="ShiftedGroup">
                                <VisualState Name="NotShifted" />
                                <VisualState Name="Shifted" />
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="CapsLockedGroup">
                                <VisualState Name="NoCapsLocked" />
                                <VisualState Name="CapsLocked">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="Background"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#ff3ec95a"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                        </VisualStateManager.VisualStateGroups>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Style for shift key  -->
    <Style x:Key="ShiftKeyStyle" TargetType="{x:Type vkb:KeyBase}">
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="False" />
        <Setter Property="Background" Value="{StaticResource f_c2}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ClickMode" Value="Press" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FFAAAAAA" />
                    <GradientStop Offset="1" Color="#FF999999" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="Background"
                        Margin="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        SnapsToDevicePixels="true">
                        <ContentPresenter
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}" />

                        <VisualStateManager.VisualStateGroups>

                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" />
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="Background"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#ff47d162"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="ShiftedGroup">
                                <VisualState Name="NotShifted" />
                                <VisualState Name="Shifted">
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="Background"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#ff3ec95a"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="CapsLockedGroup">
                                <VisualState Name="NoCapsLocked" />
                                <VisualState Name="CapsLocked" />
                            </VisualStateGroup>

                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource KeyboardKeyStyle}" TargetType="{x:Type vkb:UnicodeKey}" />
    <Style BasedOn="{StaticResource KeyboardKeyStyle}" TargetType="{x:Type vkb:FunctionKey}" />
    <Style BasedOn="{StaticResource KeyboardKeyStyle}" TargetType="{x:Type vkb:BackspaceKey}" />
    <Style BasedOn="{StaticResource ShiftKeyStyle}" TargetType="{x:Type vkb:ShiftKey}" />
    <Style BasedOn="{StaticResource CapsLockKeyStyle}" TargetType="{x:Type vkb:CapsKey}" />

    <Style TargetType="{x:Type vkb:VirtualKeyboard}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vkb:VirtualKeyboard}">

                    <ControlTemplate.Resources>

                        <Style x:Key="{x:Static vkb:VirtualKeyboard.AttachedVirtualKeyboardPopupStyleKey}" TargetType="Popup">
                            <Setter Property="Placement" Value="Bottom" />
                            <Setter Property="PopupAnimation" Value="Slide" />
                            <Setter Property="AllowsTransparency" Value="True" />
                        </Style>

                        <Style x:Key="{x:Static vkb:VirtualKeyboard.AttachedVirtualKeyboardStyle}" TargetType="vkb:VirtualKeyboard">
                            <Setter Property="Margin" Value="10" />

                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect
                                        BlurRadius="6"
                                        Direction="-90"
                                        Opacity="0.6"
                                        ShadowDepth="2" />
                                </Setter.Value>
                            </Setter>
                        </Style>


                    </ControlTemplate.Resources>

                    <Grid
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalAlignment}"
                        Background="{TemplateBinding Background}">

                        <Viewbox VerticalAlignment="Top">
                            <Grid
                                Height="500"
                                Margin="0,10,0,10"
                                HorizontalAlignment="Center">
                                <Grid HorizontalAlignment="Center">
                                    <Grid.Resources>
                                        <Style BasedOn="{StaticResource StandardKeyboardKeyStyle}" TargetType="{x:Type vkb:UnicodeKey}" />
                                        <Style BasedOn="{StaticResource StandardKeyboardKeyStyle}" TargetType="{x:Type vkb:FunctionKey}">
                                            <Setter Property="Command" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=KeyPressCommand}" />
                                        </Style>
                                        <Style BasedOn="{StaticResource StandardKeyboardKeyStyle}" TargetType="{x:Type vkb:BackspaceKey}" />
                                        <Style BasedOn="{StaticResource CapsKeyboardKeyStyle}" TargetType="{x:Type vkb:CapsKey}" />
                                        <Style BasedOn="{StaticResource ShiftKeyboardKeyStyle}" TargetType="{x:Type vkb:ShiftKey}" />

                                    </Grid.Resources>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="100" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="100" />
                                    </Grid.ColumnDefinitions>

                                    <vkb:UnicodeKey
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        ShiftOnCapsLock="false"
                                        ShiftedContent="!"
                                        ShiftedUnicodeText="!"
                                        UnshiftedContent="1"
                                        UnshiftedText="1" />
