                                        FontSize="30"
                                        ShiftOnCapsLock="false"
                                        ShiftedContent="Enter"
                                        UnshiftedContent="Enter"
                                        VirtualKey="{x:Static Key.Enter}" />

                                    <vkb:ShiftKey
