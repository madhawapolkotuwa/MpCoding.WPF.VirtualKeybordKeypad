                                        Grid.Row="0"
                                        Grid.Column="7"
                                        ShiftOnCapsLock="false"
                                        ShiftedContent="*"
                                        ShiftedUnicodeText="*"
                                        UnshiftedContent="8"
                                        UnshiftedText="8" />
                                    <vkb:UnicodeKey
