                                        Grid.Column="8"
                                        ShiftOnCapsLock="false"
                                        ShiftedContent="("
                                        ShiftedUnicodeText="("
                                        UnshiftedContent="9"
                                        UnshiftedText="9" />
                                    <vkb:UnicodeKey
                                        Grid.Row="0"
                                        Grid.Column="9"
                                        ShiftOnCapsLock="false"
                                        ShiftedContent=")"
                                        ShiftedUnicodeText=")"
                                        UnshiftedContent="0"
                                        UnshiftedText="0" />
                                    <vkb:BackspaceKey
